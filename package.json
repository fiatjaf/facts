{
  "name": "facts",
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "build-prod": "NODE_ENV=production browserify -t envify -t uglifyify index.js | uglifyjs -cm > public/bundle.js",
    "start": "ecstatic -p 5000 public",
    "watch": "watchify index.js -o public/bundle.js -dv",
    "build": "browserify index.js -o public/bundle.js -dv"
  },
  "devDependencies": {
    "babel-core": "^5.6.18",
    "babelify": "^6.1.3",
    "browserify": "^10.2.6",
    "envify": "^3.4.0",
    "react-tools": "^0.10.0",
    "redux-devtools-diff-monitor": "^3.0.0",
    "uglify-js": "^2.4.24",
    "uglifyify": "^3.0.1",
    "watchify": "^3.2.3"
  },
  "dependencies": {
    "ecstatic": "^1.1.3",
    "immupdate": "^0.1.3",
    "isomorphic-fetch": "^2.1.1",
    "pouchdb": "^5.0.0",
    "react": "^0.14.0",
    "react-autocomplete": "^0.1.4",
    "react-dom": "^0.14.0",
    "react-redux": "^3.1.0",
    "redux": "^3.0.2",
    "redux-devtools": "^2.1.5",
    "redux-logger": "^2.0.2",
    "redux-thunk": "^0.1.0",
    "reselect": "^2.0.0"
  }
}
